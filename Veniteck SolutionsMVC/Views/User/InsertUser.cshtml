@{
    ViewData["Title"] = "Insert User";
}

@{
    Layout = null;
}

<!-- Bootstrap CSS -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
<!-- jQuery (required for validation) -->
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

<script src="/js/vali.js"></script>

<style>
    /* Custom Shadow and Card Width */
    .custom-card {
        box-shadow: 0 .5rem 1rem rgba(0, 0, 0, .15) !important;
        max-width: 30%; /* Adjust card width */
        margin: 0 auto; /* Center horizontally */
    }

    .error-message {
        color: red;
        font-size: 0.9rem;
        margin-top: 5px;
    }

    .invalid-input {
        border-color: red !important;
    }
</style>

<div class="container mt-5">
    <h2 class="mb-4 text-center">@ViewData["Title"]</h2>

    <!-- Card Container -->
    <div class="card custom-card">
        <div class="card-body">
            <!-- Form -->
            <form id="userForm" method="post" action="/User/InsertUser">
                <div class="mb-3">
                    <label for="name" class="form-label">Name:</label>
                    <input type="text" class="form-control" id="name" name="name"   />
                    <div id="nameError" class="error-message" style="display: none;">Please enter a name.</div>
                </div>
                <div class="mb-3">
                    <label for="address" class="form-label">Address:</label>
                    <input type="text" class="form-control" id="address" name="address"   />
                    <div id="addressError" class="error-message" style="display: none;">Please enter an address.</div>
                </div>
                <div class="mb-3">
                    <label for="email" class="form-label">Email:</label>
                    <input type="email" class="form-control" id="email" name="email"   />
                    <div id="emailError" class="error-message" style="display: none;">Please enter a valid email address.</div>
                </div>
                <div class="mb-3">
                    <label for="mobileNumber" class="form-label">Mobile Number:</label>
                    <input type="text" class="form-control" id="mobileNumber" name="mobileNumber"   />
                    <div id="mobileNumberError" class="error-message" style="display: none;">Please enter a valid mobile number (10 digits).</div>
                </div>
                <div class="mb-3">
                    <label for="gender" class="form-label">Gender:</label>
                    <select class="form-select" id="gender" name="gender">
                        <option value="M">Male</option>
                        <option value="F">Female</option>
                    </select>
                </div>
                <div class="mb-3">
                    <label for="source" class="form-label">Source:</label>
                    <input type="text" class="form-control" id="source" name="source"   />
                    <div id="sourceError" class="error-message" style="display: none;">Please enter a source.</div>
                </div>
                <button type="submit" class="btn btn-success w-100">Save</button>
            </form>
        </div>
    </div>
</div>

<!-- Bootstrap JS (Optional, for form handling) -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

 
